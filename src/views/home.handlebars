<div>
    {{#each docs}}      {{!-- uso "docs" ya que al pasar el paginado los productos estan en un array "docs" --}}
    <div>
        <h2>Title: {{this.title}}</h2>
        <p>Description {{this.description}}</p>
        <p>Images: {{this.thumbnail}}</p>
        <p>Price: {{this.price}}</p>
        <p>Status: {{this.status}}</p>
        <p>Code: {{this.code}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Category: {{this.category}}</p>
        <div>
            <button>Add To Cart</button>
        </div>
    </div>
    {{/each}}

    <div>
        <h2>Information</h2>
        <p>
            Total Products: {{totalDocs}}
        </p>
        <p>
            Page: {{page}}
        </p>
        <div>
            {{#if hasPrevPage}}
            <a href="{{prevLink}}">Previous Page</a>
            {{/if}}
            {{#if hasNextPage}}
            <a href="{{nextLink}}">Next Page</a>
            {{/if}}
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js" /></script>       {{!-- Los scripts comunican las view con el socket --}}
<script src="/js/index.js" /></script>